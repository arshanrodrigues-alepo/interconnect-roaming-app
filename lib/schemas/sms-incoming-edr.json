{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://interconnect-roaming.com/schemas/sms-incoming-edr.json",
  "title": "Monthly Incoming SMS EDR Format",
  "description": "Event Detail Record format for incoming SMS messages from partner networks",
  "type": "object",
  "required": [
    "record_id",
    "event_date_time",
    "originating_number",
    "destination_number",
    "operator_id",
    "number_of_events",
    "direction",
    "message_type"
  ],
  "properties": {
    "record_id": {
      "type": "string",
      "description": "Unique identifier for this EDR",
      "pattern": "^EDR-IN-SMS-[0-9]{14}-[A-Z0-9]{8}$",
      "example": "EDR-IN-SMS-20250113120000-ABC12345"
    },
    "event_date_time": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of message (UTC)",
      "example": "2025-01-13T12:00:00Z"
    },
    "originating_number": {
      "type": "string",
      "description": "MSISDN of message sender in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+14155551234"
    },
    "destination_number": {
      "type": "string",
      "description": "MSISDN of message recipient in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+442071234567"
    },
    "operator_id": {
      "type": "string",
      "description": "Partner/operator identifier sending the SMS",
      "example": "PART-001"
    },
    "operator_name": {
      "type": "string",
      "description": "Partner/operator name",
      "example": "Partner Telecom Ltd"
    },
    "operator_tadig_code": {
      "type": "string",
      "description": "TADIG code of originating operator",
      "pattern": "^[A-Z]{3}[0-9]{2}$",
      "example": "USA01"
    },
    "number_of_events": {
      "type": "integer",
      "description": "Number of SMS messages (typically 1, >1 for concatenated SMS)",
      "minimum": 1,
      "example": 1
    },
    "message_parts": {
      "type": "integer",
      "description": "Number of message parts for concatenated/long SMS",
      "minimum": 1,
      "example": 1
    },
    "direction": {
      "type": "string",
      "enum": ["INCOMING", "INBOUND", "MT"],
      "description": "Direction of SMS (Mobile Terminated from perspective of destination)",
      "example": "INCOMING"
    },
    "message_type": {
      "type": "string",
      "enum": ["SMS", "SMS_MT", "P2P", "A2P"],
      "description": "Type of SMS message",
      "example": "SMS"
    },
    "message_category": {
      "type": "string",
      "enum": ["PERSON_TO_PERSON", "APPLICATION_TO_PERSON", "PERSON_TO_APPLICATION"],
      "description": "Category of message traffic",
      "example": "PERSON_TO_PERSON"
    },
    "content_type": {
      "type": "string",
      "enum": ["TEXT", "UNICODE", "BINARY", "FLASH"],
      "description": "SMS content encoding type",
      "example": "TEXT"
    },
    "message_length": {
      "type": "integer",
      "description": "Length of message in characters",
      "minimum": 0,
      "example": 95
    },
    "delivery_status": {
      "type": "string",
      "enum": ["DELIVERED", "FAILED", "PENDING", "EXPIRED", "REJECTED"],
      "description": "Delivery status of the SMS",
      "example": "DELIVERED"
    },
    "delivery_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when SMS was delivered",
      "example": "2025-01-13T12:00:05Z"
    },
    "delivery_duration_ms": {
      "type": "integer",
      "description": "Time taken for delivery in milliseconds",
      "minimum": 0,
      "example": 5200
    },
    "failure_reason": {
      "type": "string",
      "description": "Reason for delivery failure (if applicable)",
      "example": "NUMBER_NOT_REACHABLE"
    },
    "originating_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of sender",
      "pattern": "^[A-Z]{2}$",
      "example": "US"
    },
    "destination_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of recipient",
      "pattern": "^[A-Z]{2}$",
      "example": "GB"
    },
    "destination_prefix": {
      "type": "string",
      "description": "Destination number prefix for rating",
      "example": "+4420"
    },
    "rate_applied": {
      "type": "number",
      "description": "Rate per SMS applied",
      "minimum": 0,
      "example": 0.05
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "pattern": "^[A-Z]{3}$",
      "example": "USD"
    },
    "charge_amount": {
      "type": "number",
      "description": "Calculated charge for this SMS",
      "minimum": 0,
      "example": 0.05
    },
    "minimum_charge": {
      "type": "number",
      "description": "Minimum charge applied (if applicable)",
      "minimum": 0,
      "example": 0.01
    },
    "imsi": {
      "type": "string",
      "description": "International Mobile Subscriber Identity (if available)",
      "pattern": "^[0-9]{14,15}$",
      "example": "310150123456789"
    },
    "imei": {
      "type": "string",
      "description": "International Mobile Equipment Identity (if available)",
      "pattern": "^[0-9]{15}$",
      "example": "123456789012345"
    },
    "smsc_address": {
      "type": "string",
      "description": "SMS Center address used",
      "example": "+441234567890"
    },
    "protocol_id": {
      "type": "string",
      "description": "SMS protocol identifier",
      "example": "00"
    },
    "data_coding_scheme": {
      "type": "string",
      "description": "Data coding scheme value",
      "example": "00"
    },
    "message_class": {
      "type": "integer",
      "description": "Message class (0-3)",
      "minimum": 0,
      "maximum": 3,
      "example": 1
    },
    "validity_period": {
      "type": "integer",
      "description": "Message validity period in minutes",
      "minimum": 0,
      "example": 1440
    },
    "spam_score": {
      "type": "number",
      "description": "Spam probability score (0-100)",
      "minimum": 0,
      "maximum": 100,
      "example": 10
    },
    "fraud_flags": {
      "type": "array",
      "description": "Fraud/spam detection flags",
      "items": {
        "type": "string",
        "enum": ["HIGH_VOLUME", "SUSPECTED_SPAM", "PREMIUM_DESTINATION", "UNUSUAL_PATTERN"]
      },
      "example": []
    },
    "processing_status": {
      "type": "string",
      "enum": ["PENDING", "RATED", "SETTLED", "DISPUTED"],
      "description": "Current processing status of the record",
      "example": "RATED"
    },
    "rate_plan_id": {
      "type": "string",
      "description": "Rate plan/sheet ID used for rating",
      "example": "RP-2025-01-SMS-001"
    },
    "invoice_id": {
      "type": "string",
      "description": "Invoice ID when billed",
      "example": "INV-2025-01-001"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was created",
      "example": "2025-01-13T12:01:00Z"
    },
    "processed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was rated",
      "example": "2025-01-14T02:00:00Z"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments",
      "example": "Standard P2P SMS"
    }
  }
}
