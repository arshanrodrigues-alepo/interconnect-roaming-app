{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://interconnect-roaming.com/schemas/voice-incoming-edr.json",
  "title": "Monthly Incoming Voice EDR Format",
  "description": "Event Detail Record format for incoming voice calls from partner networks",
  "type": "object",
  "required": [
    "record_id",
    "event_date_time",
    "calling_number",
    "called_number",
    "operator_id",
    "call_duration",
    "call_direction",
    "call_type"
  ],
  "properties": {
    "record_id": {
      "type": "string",
      "description": "Unique identifier for this EDR",
      "pattern": "^EDR-IN-VOICE-[0-9]{14}-[A-Z0-9]{8}$",
      "example": "EDR-IN-VOICE-20250113120000-ABC12345"
    },
    "event_date_time": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of call start (UTC)",
      "example": "2025-01-13T12:00:00Z"
    },
    "calling_number": {
      "type": "string",
      "description": "MSISDN of calling party in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+14155551234"
    },
    "called_number": {
      "type": "string",
      "description": "MSISDN of called party in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+442071234567"
    },
    "operator_id": {
      "type": "string",
      "description": "Partner/operator identifier sending the traffic",
      "example": "PART-001"
    },
    "operator_name": {
      "type": "string",
      "description": "Partner/operator name",
      "example": "Partner Telecom Ltd"
    },
    "operator_tadig_code": {
      "type": "string",
      "description": "TADIG code of originating operator",
      "pattern": "^[A-Z]{3}[0-9]{2}$",
      "example": "USA01"
    },
    "call_duration": {
      "type": "integer",
      "description": "Call duration in seconds",
      "minimum": 0,
      "example": 180
    },
    "billable_duration": {
      "type": "integer",
      "description": "Billable duration after rounding (seconds)",
      "minimum": 0,
      "example": 180
    },
    "call_direction": {
      "type": "string",
      "enum": ["INCOMING", "INBOUND"],
      "description": "Direction of call (always INCOMING for this schema)",
      "example": "INCOMING"
    },
    "call_type": {
      "type": "string",
      "enum": ["VOICE", "MOBILE_TO_MOBILE", "MOBILE_TO_FIXED", "VOICE_CALL"],
      "description": "Type of voice call",
      "example": "VOICE"
    },
    "service_type": {
      "type": "string",
      "enum": ["2G", "3G", "4G_LTE", "5G", "VOLTE", "VOWIFI"],
      "description": "Technology used for the call",
      "example": "4G_LTE"
    },
    "call_result": {
      "type": "string",
      "enum": ["COMPLETED", "FAILED", "BUSY", "NO_ANSWER", "REJECTED"],
      "description": "Outcome of call attempt",
      "example": "COMPLETED"
    },
    "disconnect_reason": {
      "type": "string",
      "description": "Reason for call termination",
      "example": "NORMAL_CLEARING"
    },
    "originating_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of calling party",
      "pattern": "^[A-Z]{2}$",
      "example": "US"
    },
    "terminating_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of called party",
      "pattern": "^[A-Z]{2}$",
      "example": "GB"
    },
    "number_prefix": {
      "type": "string",
      "description": "Called number prefix for rating (first 4-7 digits)",
      "example": "+4420"
    },
    "rate_applied": {
      "type": "number",
      "description": "Rate per unit (per second/minute) applied",
      "minimum": 0,
      "example": 0.015
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "pattern": "^[A-Z]{3}$",
      "example": "USD"
    },
    "charge_amount": {
      "type": "number",
      "description": "Calculated charge for this call",
      "minimum": 0,
      "example": 2.70
    },
    "minimum_charge": {
      "type": "number",
      "description": "Minimum charge applied (if applicable)",
      "minimum": 0,
      "example": 0.50
    },
    "rounding_rule": {
      "type": "string",
      "enum": ["UP", "DOWN", "NEAREST"],
      "description": "Rounding rule applied to duration",
      "example": "UP"
    },
    "rounding_increment": {
      "type": "integer",
      "description": "Rounding increment in seconds (e.g., 60 for per-minute)",
      "example": 60
    },
    "imsi": {
      "type": "string",
      "description": "International Mobile Subscriber Identity (if available)",
      "pattern": "^[0-9]{14,15}$",
      "example": "310150123456789"
    },
    "imei": {
      "type": "string",
      "description": "International Mobile Equipment Identity (if available)",
      "pattern": "^[0-9]{15}$",
      "example": "123456789012345"
    },
    "cell_id": {
      "type": "string",
      "description": "Cell tower identifier",
      "example": "CELL-12345"
    },
    "location_area_code": {
      "type": "string",
      "description": "LAC where call was handled",
      "example": "1234"
    },
    "quality_metrics": {
      "type": "object",
      "description": "Call quality indicators",
      "properties": {
        "mos_score": {
          "type": "number",
          "description": "Mean Opinion Score (1-5)",
          "minimum": 1,
          "maximum": 5,
          "example": 4.2
        },
        "packet_loss_percentage": {
          "type": "number",
          "description": "Packet loss percentage",
          "minimum": 0,
          "maximum": 100,
          "example": 1.5
        },
        "jitter_ms": {
          "type": "number",
          "description": "Jitter in milliseconds",
          "minimum": 0,
          "example": 15.3
        },
        "latency_ms": {
          "type": "number",
          "description": "Round-trip latency in milliseconds",
          "minimum": 0,
          "example": 120
        }
      }
    },
    "processing_status": {
      "type": "string",
      "enum": ["PENDING", "RATED", "SETTLED", "DISPUTED"],
      "description": "Current processing status of the record",
      "example": "RATED"
    },
    "rate_plan_id": {
      "type": "string",
      "description": "Rate plan/sheet ID used for rating",
      "example": "RP-2025-01-001"
    },
    "invoice_id": {
      "type": "string",
      "description": "Invoice ID when billed",
      "example": "INV-2025-01-001"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was created",
      "example": "2025-01-13T13:30:00Z"
    },
    "processed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was rated",
      "example": "2025-01-14T02:00:00Z"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments",
      "example": "Premium destination"
    }
  }
}
