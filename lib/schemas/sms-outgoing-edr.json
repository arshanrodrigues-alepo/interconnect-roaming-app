{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://interconnect-roaming.com/schemas/sms-outgoing-edr.json",
  "title": "Monthly Outgoing SMS EDR Format",
  "description": "Event Detail Record format for outgoing SMS messages to partner networks",
  "type": "object",
  "required": [
    "record_id",
    "event_date_time",
    "originating_number",
    "destination_number",
    "operator_id",
    "number_of_events",
    "direction",
    "message_type"
  ],
  "properties": {
    "record_id": {
      "type": "string",
      "description": "Unique identifier for this EDR",
      "pattern": "^EDR-OUT-SMS-[0-9]{14}-[A-Z0-9]{8}$",
      "example": "EDR-OUT-SMS-20250113143000-XYZ98765"
    },
    "event_date_time": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of message (UTC)",
      "example": "2025-01-13T14:30:00Z"
    },
    "originating_number": {
      "type": "string",
      "description": "MSISDN of message sender in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+442071234567"
    },
    "destination_number": {
      "type": "string",
      "description": "MSISDN of message recipient in E.164 format",
      "pattern": "^\\+[1-9][0-9]{1,14}$",
      "example": "+14155551234"
    },
    "operator_id": {
      "type": "string",
      "description": "Partner/operator identifier receiving the SMS",
      "example": "PART-002"
    },
    "operator_name": {
      "type": "string",
      "description": "Partner/operator name",
      "example": "Destination Carrier Inc"
    },
    "operator_tadig_code": {
      "type": "string",
      "description": "TADIG code of terminating operator",
      "pattern": "^[A-Z]{3}[0-9]{2}$",
      "example": "USA02"
    },
    "number_of_events": {
      "type": "integer",
      "description": "Number of SMS messages (typically 1, >1 for concatenated SMS)",
      "minimum": 1,
      "example": 1
    },
    "message_parts": {
      "type": "integer",
      "description": "Number of message parts for concatenated/long SMS",
      "minimum": 1,
      "example": 1
    },
    "direction": {
      "type": "string",
      "enum": ["OUTGOING", "OUTBOUND", "MO"],
      "description": "Direction of SMS (Mobile Originated from perspective of sender)",
      "example": "OUTGOING"
    },
    "message_type": {
      "type": "string",
      "enum": ["SMS", "SMS_MO", "P2P", "A2P"],
      "description": "Type of SMS message",
      "example": "SMS"
    },
    "message_category": {
      "type": "string",
      "enum": ["PERSON_TO_PERSON", "APPLICATION_TO_PERSON", "PERSON_TO_APPLICATION", "BULK_MESSAGING"],
      "description": "Category of message traffic",
      "example": "PERSON_TO_PERSON"
    },
    "content_type": {
      "type": "string",
      "enum": ["TEXT", "UNICODE", "BINARY", "FLASH"],
      "description": "SMS content encoding type",
      "example": "TEXT"
    },
    "message_length": {
      "type": "integer",
      "description": "Length of message in characters",
      "minimum": 0,
      "example": 160
    },
    "delivery_status": {
      "type": "string",
      "enum": ["DELIVERED", "FAILED", "PENDING", "EXPIRED", "REJECTED"],
      "description": "Delivery status of the SMS",
      "example": "DELIVERED"
    },
    "delivery_receipt_requested": {
      "type": "boolean",
      "description": "Whether delivery receipt was requested",
      "example": true
    },
    "delivery_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when SMS was delivered",
      "example": "2025-01-13T14:30:03Z"
    },
    "delivery_duration_ms": {
      "type": "integer",
      "description": "Time taken for delivery in milliseconds",
      "minimum": 0,
      "example": 3400
    },
    "failure_reason": {
      "type": "string",
      "description": "Reason for delivery failure (if applicable)",
      "example": null
    },
    "originating_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of sender",
      "pattern": "^[A-Z]{2}$",
      "example": "GB"
    },
    "destination_country_code": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 country code of recipient",
      "pattern": "^[A-Z]{2}$",
      "example": "US"
    },
    "destination_prefix": {
      "type": "string",
      "description": "Destination number prefix for rating",
      "example": "+1415"
    },
    "destination_type": {
      "type": "string",
      "enum": ["MOBILE", "FIXED", "SHORTCODE", "PREMIUM", "TOLL_FREE"],
      "description": "Type of destination number",
      "example": "MOBILE"
    },
    "rate_applied": {
      "type": "number",
      "description": "Rate per SMS applied",
      "minimum": 0,
      "example": 0.08
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code",
      "pattern": "^[A-Z]{3}$",
      "example": "USD"
    },
    "charge_amount": {
      "type": "number",
      "description": "Calculated charge for this SMS",
      "minimum": 0,
      "example": 0.08
    },
    "minimum_charge": {
      "type": "number",
      "description": "Minimum charge applied (if applicable)",
      "minimum": 0,
      "example": 0.01
    },
    "imsi": {
      "type": "string",
      "description": "International Mobile Subscriber Identity (if available)",
      "pattern": "^[0-9]{14,15}$",
      "example": "234150987654321"
    },
    "imei": {
      "type": "string",
      "description": "International Mobile Equipment Identity (if available)",
      "pattern": "^[0-9]{15}$",
      "example": "987654321012345"
    },
    "subscriber_category": {
      "type": "string",
      "enum": ["POSTPAID", "PREPAID", "CORPORATE"],
      "description": "Subscriber type",
      "example": "POSTPAID"
    },
    "smsc_address": {
      "type": "string",
      "description": "SMS Center address used",
      "example": "+441234567890"
    },
    "protocol_id": {
      "type": "string",
      "description": "SMS protocol identifier",
      "example": "00"
    },
    "data_coding_scheme": {
      "type": "string",
      "description": "Data coding scheme value",
      "example": "00"
    },
    "message_class": {
      "type": "integer",
      "description": "Message class (0-3)",
      "minimum": 0,
      "maximum": 3,
      "example": 1
    },
    "validity_period": {
      "type": "integer",
      "description": "Message validity period in minutes",
      "minimum": 0,
      "example": 1440
    },
    "route_name": {
      "type": "string",
      "description": "Route used for SMS delivery",
      "example": "USA-TIER1-ROUTE"
    },
    "route_priority": {
      "type": "integer",
      "description": "Priority of route used (1=highest)",
      "minimum": 1,
      "example": 1
    },
    "spam_score": {
      "type": "number",
      "description": "Spam probability score (0-100)",
      "minimum": 0,
      "maximum": 100,
      "example": 5
    },
    "fraud_score": {
      "type": "number",
      "description": "Fraud risk score (0-100, higher = more suspicious)",
      "minimum": 0,
      "maximum": 100,
      "example": 8
    },
    "fraud_flags": {
      "type": "array",
      "description": "Fraud/spam detection flags",
      "items": {
        "type": "string",
        "enum": ["HIGH_VELOCITY", "SUSPECTED_SPAM", "PREMIUM_DESTINATION", "UNUSUAL_PATTERN", "BULK_TRAFFIC"]
      },
      "example": []
    },
    "content_filter_flags": {
      "type": "array",
      "description": "Content filtering flags",
      "items": {
        "type": "string",
        "enum": ["PROFANITY", "PHISHING", "MALWARE_LINK", "ADULT_CONTENT"]
      },
      "example": []
    },
    "processing_status": {
      "type": "string",
      "enum": ["PENDING", "RATED", "SETTLED", "DISPUTED"],
      "description": "Current processing status of the record",
      "example": "RATED"
    },
    "rate_plan_id": {
      "type": "string",
      "description": "Rate plan/sheet ID used for rating",
      "example": "RP-2025-01-SMS-002"
    },
    "agreement_id": {
      "type": "string",
      "description": "Agreement ID with partner",
      "example": "AGR-2024-PART002"
    },
    "invoice_id": {
      "type": "string",
      "description": "Invoice ID when billed",
      "example": "INV-2025-01-002"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was created",
      "example": "2025-01-13T14:31:00Z"
    },
    "processed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was rated",
      "example": "2025-01-14T02:00:00Z"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments",
      "example": "Delivered via premium route"
    }
  }
}
