# Database Configuration
# PostgreSQL connection URL for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/interconnect_roaming?schema=public"

# Optional: Shadow database for migrations (recommended for production)
# SHADOW_DATABASE_URL="postgresql://postgres:password@localhost:5432/interconnect_roaming_shadow?schema=public"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication (for future JWT implementation)
# JWT_SECRET="your-secret-key-change-in-production"
# JWT_EXPIRES_IN="7d"

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_DIR="./uploads"

# Optional: S3/MinIO for file storage
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION=""
# AWS_S3_BUCKET=""

# Email Configuration (for future notifications)
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM=""

# Fraud Detection Thresholds
FRAUD_TRAFFIC_SPIKE_THRESHOLD=200
FRAUD_SUCCESS_RATE_THRESHOLD=90
FRAUD_DURATION_MULTIPLIER=3
